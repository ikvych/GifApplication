<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_left"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_right"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Stop" />

    </LinearLayout>

    <com.example.gifapplication.GifView2
        android:id="@+id/gv_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp"
        android:layout_gravity="center"
        app:gv_compress_ratio="1.5"
        app:gv_circle_external_color="#3F51B5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_change"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="ChangeInterpolator" />



</LinearLayout>