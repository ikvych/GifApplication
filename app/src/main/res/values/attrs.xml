<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GifView2">
        <attr name="gv_mode" format="enum">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
        <attr name="gv_aspect_ratio" format="float|reference"/>

        <attr name="gv_circle_color" format="color|reference" />
        <attr name="gv_min_circle_size" format="dimension" />
        <attr name="gv_max_circle_size" format="dimension" />
        <attr name="gv_cycle_duration" format="integer" />
        <!--радіальні кольори-->
        <attr name="gv_circle_internal_color" format="color|reference" />
        <attr name="gv_circle_external_color" format="color|reference" />

        <attr name="gv_circle_count" format="integer" />
        <attr name="gv_sweep_angle" format="integer" />
        <!--стиснутість еліапса-->
        <attr name="gv_compress_ratio" format="float" />
    </declare-styleable>
</resources>